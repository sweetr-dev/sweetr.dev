# top-level EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown â€“ keep intentional whitespace
[*.md]
trim_trailing_whitespace = false

# YAML often expects 2 spaces, but let's be explicit
[*.{yml,yaml}]
indent_size = 2

# JSON should always be 2 spaces
[*.json]
indent_size = 2

# Makefiles need tabs
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# Python projects often prefer 4 spaces
[*.py]
indent_size = 4

# C / C++ / Java / C#
[*.{c,cpp,h,hpp,java,cs}]
indent_size = 4

# TypeScript / JavaScript / JSX / TSX
[*.{js,ts,jsx,tsx}]
indent_size = 2

# HTML / CSS / SCSS
[*.{html,css,scss}]
indent_size = 2
