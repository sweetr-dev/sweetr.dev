{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "web#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"],
      "env": ["GITHUB_CLIENT_ID", "GITHUB_SECRET", "NODE_ENV", "APP_SECRET"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "test:unit": {
      "env": ["NODE_ENV"],
      "outputs": []
    },
    "test:integration": {
      "cache": false,
      "env": ["NODE_ENV", "DATABASE_URL"]
    }
  }
}
